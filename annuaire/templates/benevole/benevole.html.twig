{% extends 'base.html.twig' %}

{% block body %}

	{% block styles %}    

		<link rel="stylesheet" href="{{ asset('assets/css/styleBenevole.css') }}">

         <section class="management">
            <div class="listeNom" > 
            	<select @change="filterBenevole"  classe="liste">		
					<option class="optionText" ><p class="white">Selectionnez un bénévole</p></option>
				{% for benevole in benevole %} 
					<option class="optionText" >{{ benevole.prenom }} {{ benevole.nom }}</option>	
				{% endfor %}
            </select>
			
            </div> 
            <div class="listePoste">
                <select @change="filterResponsable" classe="listeRes">
                    <option class="optionText"><p>Selectionnez un responsable</p></option>
                    <option class="optionText"></option>
                </select>
            </div>
        </section> 

		
        <section class="benevole">
		
			
		<table class="benevoleTable" id="benevoleTable">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prenom</th>				
			</thead>

			 <tbody>
				{% for benevole in benevole %}
					<tr>
						<td>{{ benevole.prenom }}</td>
						<td>{{ benevole.nom }}</td>
						<td><button :data-id="benevole.id" @click="openModal" class="btn">Info &#9993</button></td> 		
					</tr>
				{% endfor %}
			</tbody>
		</table> 
		
		
		
		<div class="adminGate">
		       <button class="adminLog" @click="adminPortal()">Admin</button>			
        </div> 
        </section>
		

