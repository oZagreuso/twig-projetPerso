	{% endblock %}

        <script>
            document.addEventListener("DOMContentLoaded", function() {
            const adminButton = document.querySelector('.adminLog');
            adminButton.addEventListener('click', adminPortal);
            });

			document.addEventListener("DOMContentLoaded", function () {
        	const selectListe = document.querySelector('.liste');

        	selectListe.addEventListener('change', function () {
            const selectedBenevole = this.value;
            
            fetchData(selectedBenevole);
        });
    });





        </script>

     

{% endblock %}
